<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:CodeHighlighter="clr-namespace:CodeHighlighter;assembly=CodeHighlighter">

    <Style x:Key="codeHighlighterStyle" TargetType="CodeHighlighter:SyntaxHighlightingRichTextBox">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CodeHighlighter:SyntaxHighlightingRichTextBox">
                    <RichTextBox x:Name="RichTextBox"
                                 Margin="{TemplateBinding Padding}"
                                 Background="{TemplateBinding Background}"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 Foreground="{TemplateBinding Foreground}"
                                 IsReadOnly="True" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
