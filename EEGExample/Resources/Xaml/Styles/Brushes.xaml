<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <RadialGradientBrush x:Key="RadialShineBrush" Center="0.5,0.5" RadiusX="0.4" RadiusY="0.6">
        <GradientStop Offset="0" Color="#4CFFFFFF" />
        <GradientStop Offset="1" Color="Transparent" />
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="PressedRadialShineBrush" Center="0.5,0.5" RadiusX="0.45" RadiusY="0.55">
        <GradientStop Offset="0" Color="#9CFFFFFF" />
        <GradientStop Offset="1" Color="Transparent" />
    </RadialGradientBrush>

    <LinearGradientBrush x:Key="MainPageBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="Black" />
        <GradientStop Offset="1" Color="#4CFFFFFF" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="listBoxItemHoverStyle" Color="#7FFFFFFF" />

    <SolidColorBrush x:Key="listBoxItemSelectedStyle" Color="#7FFFFFFF" />

    <SolidColorBrush x:Key="listItemBorderBrush" Color="#FF616161" />

    <SolidColorBrush x:Key="codeViewFileHeaderBrush" Color="LightGray" />

</ResourceDictionary>
